<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Music Playlist</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <div class="container">
        <header>
            <h1>Music Playlist</h1>
        </header>

        <div class="add-song">
            <div class="search">
                <input type="text" id="youtubeUrl" placeholder="Enter YouTube URL">
                <button id="addSongBtn">Add Song</button>
            </div>
        </div>


        <div class="filters">
            <button id="filterToggleBtn">üîç</button> <!-- Filter icon -->
            <div id="filterOptions" style="display: none;">
                <h2 id="filterText" style="display: none;">Filter Songs</h2> <!-- Initially hidden -->
                <label for="mood">Mood:</label>
                <select id="mood" onchange="filterSongs()">
                    <option value="">Any</option>
                    <option value="happy">Happy</option>
                    <option value="sad">Sad</option>
                    <option value="chill">Chill</option>
                </select>
            </div>
        </div>

        <div id="player" style="display: none;">
            <!-- YouTube player will be injected here -->
        </div>

        <div class="song">
            <h2 class="song-text">Songs</h2>
            <ul id="songList" class="songs-list"></ul>
        </div>

        <div id="playlistSection" style="display: none;">
            <h2>Your Playlists</h2>
            <div class="playlist-container">
                <div id="happySongs" class="playlist" style="display: none;">
                    <h3>Happy Songs</h3>
                    <button id="happyShuffleBtn"><i class="fas fa-random"></i></button> <!-- Shuffle icon -->
                    <button id="happyRepeatBtn"><i class="fas fa-redo"></i></button> <!-- Repeat icon -->
                    <ul></ul>
                </div>
                <div id="sadSongs" class="playlist" style="display: none;">
                    <h3>Sad Songs</h3>
                    <button id="sadShuffleBtn"><i class="fas fa-random"></i></button> <!-- Shuffle icon -->
                    <button id="sadRepeatBtn"><i class="fas fa-redo"></i></button> <!-- Repeat icon -->
                    <ul></ul>
                </div>
                <div id="chillSongs" class="playlist" style="display: none;">
                    <h3>Chill Songs</h3>
                    <button id="chillShuffleBtn"><i class="fas fa-random"></i></button> <!-- Shuffle icon -->
                    <button id="chillRepeatBtn"><i class="fas fa-redo"></i></button> <!-- Repeat icon -->
                    <ul></ul>
                </div>
            </div>
        </div>

        <div id="addToPlaylistModal" class="modal" style="display: none;">
            <h2>Add to Playlist</h2>
            <label for="moodSelect">Select Mood:</label>
            <select id="moodSelect">
                <option value="happy">Happy</option>
                <option value="sad">Sad</option>
                <option value="chill">Chill</option>
            </select>
            <button id="confirmAddToPlaylistBtn">Confirm</button>
            <button id="cancelAddToPlaylistBtn">Cancel</button>
        </div>
    </div>

    <div id="queueDisplay" style="margin-top: 20px;">
        <h3>Now Playing:</h3>
        <p id="currentSong">None</p>
        <h3>Next Up:</h3>
        <p id="nextSong">None</p>
    </div>

    <script src="https://www.youtube.com/iframe_api"></script>
    <script src="/script.js"></script>
</body>

</html>